<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".onetwoActivity"
    >
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_family"
            android:text="1학년 1학기"
            android:textColor="#090909"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="97dp"
            android:text="이수학점"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="36dp"
            android:layout_height="50dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="80dp"
            android:text="18"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="406dp"
            android:layout_marginTop="160dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="328dp"
                android:layout_height="41dp"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="164dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_right_stroke"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="16dp"
                    android:text="과목명"
                    android:textColor="#000000"
                    android:textSize="12dp"></CheckBox>

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_right_stroke"
                    android:gravity="center"
                    android:text="구분"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_right_stroke"
                    android:gravity="center"
                    android:text="학점"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:background="#F0F0F0"
                    android:gravity="center"
                    android:text="성적"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cellRecyclerView"
                android:layout_width="328dp"
                android:layout_height="366dp"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="10dp"
            android:text="더 입력하기"
            android:textColor="#FF9800"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_delete"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택항목 지우기"
            android:textColor="#000000"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button_return"
            android:layout_width="81dp"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:text="완료"
            android:textColor="#FF9800"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>