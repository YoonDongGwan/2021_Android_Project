<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="평점"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="25dp"
        android:text="4.45"
        android:textColor="#FFC107"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="40dp"
        android:text="이수학점"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="25dp"
        android:text="18"
        android:textColor="#FFC107"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_"
        android:layout_width="79dp"
        android:layout_height="45dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:onClick="onButton0Clicked"
        android:text="수정하기"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="328dp"
        android:layout_height="406dp"
        android:layout_marginTop="130dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="406dp"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="328dp"
                android:layout_height="41dp"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="164dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_right_stroke"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="16dp"
                    android:text="과목명"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_right_stroke"
                    android:gravity="center"
                    android:text="구분"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_right_stroke"
                    android:gravity="center"
                    android:text="학점"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:background="#F0F0F0"
                    android:gravity="center"
                    android:text="성적"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cellRecyclerView"
                android:layout_width="328dp"
                android:layout_height="366dp"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택항목 지우기"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.484" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더 입력하기"
        android:textColor="#FF9800"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.468" />
</androidx.constraintlayout.widget.ConstraintLayout>