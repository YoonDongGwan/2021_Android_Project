<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font_family"
        android:text="학기별 성적"
        android:textColor="#090909"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 1학년 1학기"
                android:textColor="#0B0A0A"
                android:textSize="16dp"
                app:rippleColor="#FFFFFF" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#DADADA"
                android:backgroundTint="@color/white"
                android:text=" 1학년 2학기"
                android:textColor="#0C0C0C"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 2학년 1학기"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 2학년 2학기"
                android:textSize="16dp"
                app:iconTint="#FFFFFF" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 3학년 1학기"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 3학년 2학기 "
                android:textColor="#070707"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 4학년 1학기 "
                android:textColor="#040404"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:text=" 4학년 2학기 "
                android:textColor="#000000"
                android:textSize="16dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="147dp"
        android:text="평점"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="136dp"
        android:text="4.43"
        android:textColor="#FFC107"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="147dp"
        android:text="이수학점"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="136dp"
        android:text="18"
        android:textColor="#FFC107"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="79dp"
        android:layout_height="45dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="144dp"
        android:background="#FFFFFF"
        android:text="수정하기"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="328dp"
        android:layout_height="406dp"
        android:layout_marginTop="191dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="406dp"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="328dp"
                android:layout_height="41dp"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="164dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_right_stroke"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="16dp"
                    android:text="과목명"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_right_stroke"
                    android:gravity="center"
                    android:text="구분"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/header_right_stroke"
                    android:gravity="center"
                    android:text="학점"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:background="#F0F0F0"
                    android:gravity="center"
                    android:text="성적"
                    android:textColor="#000000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cellRecyclerView"
                android:layout_width="328dp"
                android:layout_height="366dp"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>