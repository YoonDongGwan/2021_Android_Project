<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:includeFontPadding="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/view_shape2"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv11"
            style="Noto Sans CJK KR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="전공과목명"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9.91dp"
            />

        <TextView
            android:id="@+id/tv22"
            style="Noto Sans CJK KR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="9.91dp"
            android:layout_toStartOf="@id/btn33"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="C+"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn33"
            style="Noto Sans CJK KR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@id/tv44"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="0dp"
            android:text="A+"
            android:textColor="#FCAF17"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv44"
            style="Noto Sans CJK KR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="4.35"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="9.91dp"
            android:layout_marginEnd="13.5dp"/>

    </RelativeLayout>




</LinearLayout>