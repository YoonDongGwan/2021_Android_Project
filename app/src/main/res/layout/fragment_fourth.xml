<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fourthFragment">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="51dp"
        android:id="@+id/fourth_frag_framelayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    <!-- TODO: Update blank fragment layout -->
    <com.example.inucalc.CustomProgressbar
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/fourth_circleprogressbar"
        android:indeterminateOnly="false"
        >

    </com.example.inucalc.CustomProgressbar>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_all"
            android:layout_gravity="center_horizontal"
            android:text="평균 성적"
            android:includeFontPadding="false"
            android:textColor="#000000"
            android:textSize="22dp"
            style="Noto Sans CJK KR"
            >
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="A+"
                android:textSize="49dp"
                style="Noto Sans CJK KR"
                android:includeFontPadding="false"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/24%"
                android:textSize="25dp"
                style="Noto Sans CJK KR"
                android:textColor="#767676"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fourth_frag_framelayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#FF7272"
                android:layout_gravity="center_vertical"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:includeFontPadding="false"
                android:text="A+"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_marginLeft="4dp"
                style="Noto Sans CJK KR"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="24%"
                android:id="@+id/A_plus_percent"
                android:includeFontPadding="false"
                style="Noto Sans CJK KR"
                ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="60dp"
                >
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#FCAF17"
                    android:layout_gravity="center_vertical"
                    ></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:includeFontPadding="false"
                    android:text="A0"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="4dp"
                    style="Noto Sans CJK KR"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="24%"
                    android:includeFontPadding="false"
                    android:id="@+id/A_zero_percent"
                    style="Noto Sans CJK KR"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#BAEA00"
                    android:layout_gravity="center_vertical"
                    ></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:includeFontPadding="false"
                    android:text="B+"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="4dp"
                    style="Noto Sans CJK KR"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="24%"
                    android:includeFontPadding="false"
                    android:id="@+id/B_plus_percent"
                    style="Noto Sans CJK KR"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="60dp"
                >
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#5EACFA"
                    android:layout_gravity="center_vertical"
                    ></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:includeFontPadding="false"
                    android:text="B0"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="4dp"
                    style="Noto Sans CJK KR"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="24%"
                    android:includeFontPadding="false"
                    android:id="@+id/B_zero_percent"
                    style="Noto Sans CJK KR"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#DD8CE2"
                    android:layout_gravity="center_vertical"
                    ></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:includeFontPadding="false"
                    android:text="C+"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="4dp"
                    style="Noto Sans CJK KR"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="24%"
                    android:includeFontPadding="false"
                    android:id="@+id/C_plus_percent"
                    style="Noto Sans CJK KR"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="60dp"
                >
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#CCCCCC"
                    android:layout_gravity="center_vertical"
                    ></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:includeFontPadding="false"
                    android:text="C0"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="4dp"
                    style="Noto Sans CJK KR"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="24%"
                    android:includeFontPadding="false"
                    android:id="@+id/C_zero_percent"
                    style="Noto Sans CJK KR"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>